<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="CardGameCorner.Views.LoginPage">

    <ScrollView>
        <VerticalStackLayout Spacing="25" Padding="30,0" VerticalOptions="Center">

            <Label Text="Login"
                   FontSize="24"
                   FontAttributes="Bold"
                   TextColor="White"
                HorizontalOptions="Center" />

                <!-- Logo Image -->
                <Image Source="Resources/Images/splashscreenlogo.png"
                   HeightRequest="100"
                   HorizontalOptions="Center" />

                <!-- Username and Password Fields -->
                <VerticalStackLayout Spacing="5">
                    <Entry Text="{Binding Username}"
                       Placeholder="Username"
                       PlaceholderColor="LightGray"
                       TextColor="White"
                       BackgroundColor="#2A4B5D"
                       Keyboard="Email" />

                    <Entry Text="{Binding Password}"
                       Placeholder="Password"
                       PlaceholderColor="LightGray"
                       TextColor="White"
                       BackgroundColor="#2A4B5D"
                       IsPassword="True" />
                </VerticalStackLayout>

                <!-- Login Button -->
                <Button Text="Login"
                    Command="{Binding LoginCommand}"
                    IsEnabled="{Binding !IsBusy}"
                    HorizontalOptions="Center"
                    BackgroundColor="#3B92A0"
                    TextColor="White"
                    WidthRequest="200"       
                    HeightRequest="50" /> 

                <!-- Sign Up Button (Styled Same as Login Button) -->
            <Button Text="Sign Up"
                    Command="{Binding NavigateToRegistrationCommand}"
                    BackgroundColor="#3B92A0"
                    HorizontalOptions="Center"
                    TextColor="White"
                    WidthRequest="200"     
                    HeightRequest="50" />

            <!-- Forgot Password Toggle Button -->
                <Button Text="Forgot Password?"
                    Command="{Binding ToggleForgotPasswordCommand}" 
                    HorizontalOptions="Center"
                    TextColor="LightGray"
                    BackgroundColor="Transparent" />

                    <!-- Forgot Password Popup (Visible When Toggled) -->
                    <Frame IsVisible="{Binding ShowForgotPassword}"
                   BackgroundColor="White"
                   Padding="20"
                   HasShadow="True"
                   CornerRadius="10"
                   HorizontalOptions="Center"
                   VerticalOptions="Center">
                        <VerticalStackLayout Spacing="15">
                            <Label Text="Enter your email address"
                           TextColor="#1B3B48" />
                            <!-- Dark text on white background -->
                            <Entry Text="{Binding ForgotPasswordEmail}"
                           Placeholder="Email"
                           PlaceholderColor="Gray"
                           TextColor="#1B3B48"
                           Keyboard="Email"
                           BackgroundColor="#E0E0E0" />
                            <Button Text="Send Reset Link"
                            Command="{Binding ForgotPasswordCommand}"
                            BackgroundColor="#3B92A0"
                            TextColor="White" />
                        </VerticalStackLayout>
                    </Frame>

                    <!-- Activity Indicator -->
                    <ActivityIndicator IsRunning="{Binding IsBusy}"
                               IsVisible="{Binding IsBusy}"
                               HorizontalOptions="Center"
                               Color="White" />
        </VerticalStackLayout>
    </ScrollView>
</ContentPage>
