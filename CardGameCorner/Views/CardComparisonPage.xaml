         Padding="20" 
         RowSpacing="15">

            <!-- Logo -->
            <Image Grid.Row="0"
              Source="{Binding GameImageUrl}"
              HeightRequest="75"
              HorizontalOptions="Center"/>

            <!-- Main Content -->
            <Grid Grid.Row="1"
                  RowDefinitions="Auto,Auto"
                  ColumnDefinitions="*,*"
                  ColumnSpacing="30"
                  RowSpacing="10">

