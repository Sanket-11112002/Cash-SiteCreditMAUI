                       HeightRequest="275" 
                       MinimumHeightRequest="200"
                       WidthRequest="180"
                       Padding="5"
                       Margin="0"
                       BackgroundColor="Transparent"
                       IsClippedToBounds="True">
                    <Image x:Name="scannedimage" 
                           Aspect="AspectFit"   
                           HeightRequest="270" 
                           WidthRequest="175"
                           VerticalOptions="Center"
                           HorizontalOptions="Center"/>
                </Frame>

                <Frame Grid.Row="0" 
                       Grid.Column="1" 
                       BorderColor="Green" 
                       HeightRequest="275"
                       MinimumHeightRequest="200"
                       WidthRequest="180" 
                       CornerRadius="10" 
                       HasShadow="True"
                       Padding="5"
                       Margin="0"
                       IsClippedToBounds="True">
                    <Image x:Name="searchresultimage" 
                           Aspect="AspectFit"  
                           HeightRequest="270" 
                           WidthRequest="175"
                           VerticalOptions="Center"
                           HorizontalOptions="Center"/>
                

