<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="CardGameCorner.Views.MyOrdersPage"
             BackgroundColor="#1B3B48">

    <ContentPage.NavigationPage.TitleView>
        <Label Text="My Orders" 
               TextColor="White"
               FontSize="22"
               FontAttributes="Bold"
               HorizontalOptions="Start"
               VerticalOptions="Center"/>
    </ContentPage.NavigationPage.TitleView>

    <Grid RowDefinitions="Auto,Auto,*">
        <Label Grid.Row="0"
           Text="My Orders"
           TextColor="White"
           FontSize="22"
           FontAttributes="Bold"
           Margin="20,10"
           HorizontalOptions="Start"/>

        <Label Grid.Row="1" 
           Text="{Binding ErrorMessage}"
           IsVisible="{Binding HasError}"
           TextColor="Red"
           Margin="20,10"
           HorizontalOptions="Center"/>

        <ScrollView Grid.Row="2">
            <Grid>
                <!-- Empty Message -->
                <VerticalStackLayout IsVisible="{Binding ShowEmptyMessage}"
                               HorizontalOptions="Center"
                               VerticalOptions="Center">
                    <Label Text="{Binding EmptyMessage}"
                       TextColor="White"
                       FontSize="16"
                       HorizontalOptions="Center"/>
                </VerticalStackLayout>

                <CollectionView ItemsSource="{Binding Orders}"
                          IsVisible="{Binding HasOrders}"
                          Margin="0,10,0,0">
                    <CollectionView.EmptyView>
                    <VerticalStackLayout HorizontalOptions="Center" 
                           VerticalOptions="Center">
                        <Label Text="You do not have any orders!"
                   TextColor="White"
                   FontSize="16"
                   HorizontalOptions="Center"/>
                    </VerticalStackLayout>
                </CollectionView.EmptyView>
                <CollectionView.ItemTemplate>
                    <DataTemplate>
                        <Frame Margin="16,8"
                               Padding="16"
                               BorderColor="#4A8BA8"
                               BackgroundColor="#FFFFFF"
                               HasShadow="True"
                               CornerRadius="8">
                            <Grid RowDefinitions="Auto,Auto,Auto,Auto,Auto,Auto,Auto,Auto"
                                  RowSpacing="8"
                                  ColumnDefinitions="Auto,*">

                                <!-- Order ID -->
                                <Label Grid.Row="0" 
                                       Grid.Column="0"
                                       Text="Order ID: "
                                       TextColor="#1B3B48"
                                       FontSize="14"
                                       FontAttributes="Bold"/>
                                <Label Grid.Row="0" 
                                       Grid.Column="1"
                                       Text="{Binding OrderId}"
                                       TextColor="#1B3B48"
                                       FontSize="14"/>

                                <!-- Date -->
                                <Label Grid.Row="1" 
                                       Grid.Column="0"
                                       Text="Date: "
                                       TextColor="#1B3B48"
                                       FontSize="14"
                                       FontAttributes="Bold"/>
                                <Label Grid.Row="1" 
                                       Grid.Column="1"
                                       Text="{Binding OrderDate, StringFormat='{0:dd/MM/yyyy HH:mm}'}"
                                       TextColor="#1B3B48"
                                       FontSize="14"/>

                                <!-- Game -->
                                <Label Grid.Row="2" 
                                       Grid.Column="0"
                                       Text="Game: "
                                       TextColor="#1B3B48"
                                       FontSize="14"
                                       FontAttributes="Bold"/>
                                <Label Grid.Row="2" 
                                       Grid.Column="1"
                                       Text="{Binding Game}"
                                       TextColor="#1B3B48"
                                       FontSize="14"/>

                                <!-- Status -->
                                <Label Grid.Row="3" 
                                       Grid.Column="0"
                                       Text="Status: "
                                       TextColor="#1B3B48"
                                       FontSize="14"
                                       FontAttributes="Bold"/>
                                <Label Grid.Row="3" 
                                       Grid.Column="1"
                                       Text="{Binding Status}"
                                       FontAttributes="Bold"
                                       TextColor="{Binding Status, Converter={StaticResource StatusColorConverter}}"
                                       FontSize="14"/>

                                <!-- Payment -->
                                <Label Grid.Row="4" 
                                       Grid.Column="0"
                                       Text="Payment: "
                                       TextColor="#1B3B48"
                                       FontSize="14"
                                       FontAttributes="Bold"/>
                                <Label Grid.Row="4" 
                                       Grid.Column="1"
                                       Text="{Binding Payment}"
                                       TextColor="#1B3B48"
                                       FontSize="14"/>

                                <!-- Payment Account -->
                                <Label Grid.Row="5" 
                                       Grid.Column="0"
                                       Text="Account: "
                                       TextColor="#1B3B48"
                                       FontSize="14"
                                       FontAttributes="Bold"/>
                                <Label Grid.Row="5" 
                                       Grid.Column="1"
                                       Text="{Binding PaymentAccount}"
                                       TextColor="#1B3B48"
                                       FontSize="14"/>

                                <!-- Contact -->
                                <Label Grid.Row="6" 
                                       Grid.Column="0"
                                       Text="Contact: "
                                       TextColor="#1B3B48"
                                       FontSize="14"
                                       FontAttributes="Bold"/>
                                <Label Grid.Row="6" 
                                       Grid.Column="1"
                                       Text="{Binding Contact}"
                                       TextColor="#1B3B48"
                                       FontSize="14"/>

                                <!-- Pickup -->
                                <Label Grid.Row="7" 
                                       Grid.Column="0"
                                       Text="Pickup: "
                                       TextColor="#1B3B48"
                                       FontSize="14"
                                       FontAttributes="Bold"/>
                                <Label Grid.Row="7" 
                                       Grid.Column="1"
                                       Text="{Binding Pickup, StringFormat='{0}'}"
                                       TextColor="#1B3B48"
                                       FontSize="14"/>
                            </Grid>
                        </Frame>
                    </DataTemplate>
                </CollectionView.ItemTemplate>
            </CollectionView>
            </Grid>
        </ScrollView>

        <ActivityIndicator Grid.RowSpan="3"
                          IsRunning="{Binding IsLoading}"
                          IsVisible="{Binding IsLoading}"
                          HorizontalOptions="Center"
                          VerticalOptions="Center"
                          Color="White"/>
    </Grid>
</ContentPage>