<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:vm="clr-namespace:CardGameCorner.ViewModels"
             xmlns:models="clr-namespace:CardGameCorner.Models"
             x:Class="CardGameCorner.Views.HomePage"
             x:DataType="vm:HomeViewModel">

    <Grid RowDefinitions="Auto,*">
        <!-- Header with logo at the top -->
        <Grid Row="0" HorizontalOptions="FillAndExpand" VerticalOptions="Start">
            <Image Source="Resources/Images/splashscreenlogo.png"
                   HeightRequest="70" 
                   HorizontalOptions="Center"
                   VerticalOptions="Start"
                   Margin="40" />

        </Grid>

        <!--<Label Text="{Binding WelcomeMessage}" 
           FontSize="24"
           HorizontalOptions="Center"
           VerticalOptions="Center" />-->

        <!-- Title label -->
        <Label Text="CARD GAME CORNER"
               FontSize="30"
               FontAttributes="Bold"
               TextColor="White"  
               HorizontalOptions="Center"
               VerticalOptions="Start"
               Grid.Row="0" />

        <!-- Content -->
        <Grid Grid.Row="1" Padding="10">
            <CollectionView ItemsSource="{Binding Games}"
                            SelectionMode="None">
                <CollectionView.ItemsLayout>
                    <GridItemsLayout Orientation="Vertical"
                                     Span="2"
                                     VerticalItemSpacing="10"
                                     HorizontalItemSpacing="10" />
                </CollectionView.ItemsLayout>

                <CollectionView.ItemTemplate>
                    <DataTemplate x:DataType="models:Game">
                        <Frame Padding="0"
                               CornerRadius="10"
                               IsClippedToBounds="True"
                               Margin="5"
                               BackgroundColor="White">
                            <!-- Card background color -->

                            <Frame.GestureRecognizers>
                                <TapGestureRecognizer Command="{Binding Source={RelativeSource AncestorType={x:Type vm:HomeViewModel}}, Path=GameSelectedCommand}"
                                                      CommandParameter="{Binding .}" />
                            </Frame.GestureRecognizers>

                            <Grid RowDefinitions="*, Auto">
                                <Image Grid.Row="0"
                                       Source="{Binding BackgroundImage}"
                                       Aspect="AspectFill"
                                       HeightRequest="160"
                                       BackgroundColor="LightGray" />

                                <Image Grid.Row="0"
                                       Source="{Binding LogoImage}"
                                       HeightRequest="100"
                                       HorizontalOptions="Center"
                                       VerticalOptions="Start"
                                       Margin="10" />

                                <!--<Label Grid.Row="1"
                                       Text="{Binding DisplayName}"
                                       HorizontalTextAlignment="Center"
                                       Padding="10"
                                       FontAttributes="Bold"
                                       TextColor="Black" />-->
                                <!-- Display name text color for contrast -->
                            </Grid>
                        </Frame>
                    </DataTemplate>
                </CollectionView.ItemTemplate>
            </CollectionView>

            <!-- Loading Indicator -->
            <ActivityIndicator IsRunning="{Binding IsLoading}"
                             IsVisible="{Binding IsLoading}"
                             HorizontalOptions="Center"
                             VerticalOptions="Center" />

            <!-- Error Message -->
            <Label Text="{Binding ErrorMessage}"
                   IsVisible="{Binding ErrorMessage, Converter={StaticResource StringNotEmptyConverter}}"
                   TextColor="Red"
                   HorizontalOptions="Center"
                   VerticalOptions="Center" />
        </Grid>
    </Grid>
</ContentPage>
