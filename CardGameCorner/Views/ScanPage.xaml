talOptions="Center"                    IsEnabled="True"                    x:Name="uploadButton" />            <!-- Captured Image -->            <Image x:Name="capturedImage"                   HeightRequest="300"                   Aspect="AspectFit"                   IsVisible="False"                   SemanticProperties.Description="Captured image will appear here" />        </VerticalStackLayout>    </ScrollView></ContentPage>