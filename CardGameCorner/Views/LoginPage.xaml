<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="CardGameCorner.Views.LoginPage"
             Title="{Binding LoginButtonText}"
             BackgroundColor="#1B3B48">
    <ScrollView>
        <VerticalStackLayout Spacing="20" Padding="30,0" VerticalOptions="Center">
            <!-- Logo Image -->
            <Image Source="splashscreenlogo.png"
                   HeightRequest="80"
                   Margin="0,0,0,20"
                   HorizontalOptions="Center"/>

            <!-- Social Login Section -->
            <VerticalStackLayout Spacing="10">
                <!-- Facebook Login Button -->
                <Frame BorderColor="#3B92A0" 
                       BackgroundColor="#2A4B5D"
                       Padding="0"
                       HasShadow="False"
                       CornerRadius="5"
                       HeightRequest="45">
                    <Button x:Name="FacebookSignInButton"
                            Text="Sign In with Facebook"
                            Clicked="OnFacebookSignInClicked"
                            ImageSource="facebook.png"
                            TextColor="White"
                            BackgroundColor="Transparent"
                            BorderWidth="0"/>
                </Frame>

                <!-- Google Login Button -->
                <Frame BorderColor="#3B92A0"
                       BackgroundColor="#2A4B5D"
                       Padding="0"
                       HasShadow="False"
                       CornerRadius="5"
                       HeightRequest="45">
                    <Button x:Name="GoogleSignInButton"
                            Text="Sign In with Google"
                            Command="{Binding LoginCommand1}"
                            ImageSource="google.png"
                            TextColor="White"
                            BackgroundColor="Transparent"
                            BorderWidth="0"/>
                </Frame>
            </VerticalStackLayout>

            <!-- Or Separator -->
            <Grid Margin="0,10">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>
                <BoxView HeightRequest="1" 
                        BackgroundColor="#3B92A0" 
                        VerticalOptions="Center"/>
                <Label Text="OR" 
                       Grid.Column="1" 
                       TextColor="#7A9AAD"
                       Margin="15,0"
                       VerticalOptions="Center"/>
                <BoxView Grid.Column="2" 
                        HeightRequest="1" 
                        BackgroundColor="#3B92A0" 
                        VerticalOptions="Center"/>
            </Grid>

            <!-- Username Entry -->
            <Frame BorderColor="#3B92A0" 
                   BackgroundColor="#2A4B5D"
                   Padding="15,5"
                   HasShadow="False"
                   CornerRadius="5">
                <Grid ColumnDefinitions="Auto,*">
                    <Image Source="user.png"
                           HeightRequest="20"
                           WidthRequest="20"
                           Margin="0,0,10,0"/>
                    <Entry Grid.Column="1"
                           Text="{Binding Username}"
                           Placeholder="{Binding UsernamePlaceholder}"
                           PlaceholderColor="#7A9AAD"
                           TextColor="White"
                           BackgroundColor="Transparent"
                           Keyboard="Email"/>
                </Grid>
            </Frame>

            <!-- Password Entry -->
            <Frame BorderColor="#3B92A0"
                   BackgroundColor="#2A4B5D"
                   Padding="15,5"
                   HasShadow="False"
                   CornerRadius="5">
                <Grid ColumnDefinitions="Auto,*">
                    <Image Source="padlock.png"
                           HeightRequest="20"
                           WidthRequest="20"
                           Margin="0,0,10,0"/>
                    <Entry Grid.Column="1"
                           Text="{Binding Password}"
                           Placeholder="{Binding PasswordPlaceholder}"
                           PlaceholderColor="#7A9AAD"
                           TextColor="White"
                           BackgroundColor="Transparent"
                           IsPassword="True" />
                </Grid>
            </Frame>

            <!-- Login Button -->
            <Button Text="{Binding LoginButtonText}"
                    Command="{Binding LoginCommand}"
                    IsEnabled="{Binding !IsBusy}"
                    HorizontalOptions="Fill"
                    BackgroundColor="#3B92A0"
                    TextColor="White"
                    CornerRadius="5"
                    Margin="0,10"/>

            <!-- Forgot Password Button -->
            <Button Text="{Binding ForgotPasswordText}"
                    Command="{Binding ToggleForgotPasswordCommand}"
                    HorizontalOptions="Center"
                    TextColor="#7A9AAD"
                    BackgroundColor="Transparent"
                    Margin="0,-10,0,-20"/>

            <!-- Sign Up Link -->
            <HorizontalStackLayout HorizontalOptions="Center" Spacing="5">
                <Label Text="Don't have an account? "
                       TextColor="#7A9AAD"
                       VerticalOptions="Center"/>
                <Button Text="{Binding SignUpButtonText}"
                        Command="{Binding NavigateToRegistrationCommand}"
                        TextColor="#3B92A0"
                        BackgroundColor="Transparent"
                        Padding="0"
                        VerticalOptions="Center"/>
            </HorizontalStackLayout>

            <!-- Forgot Password Popup -->
            <Frame IsVisible="{Binding ShowForgotPassword}"
                   BackgroundColor="#2A4B5D"
                   Padding="20"
                   HasShadow="True"
                   CornerRadius="10"
                   HorizontalOptions="Fill"
                   VerticalOptions="Center"
                   BorderColor="#3B92A0">
                <VerticalStackLayout Spacing="15">
                    <Label Text="{Binding ForgotPasswordEmailLabel}"
                           TextColor="White"/>

                    <Frame BorderColor="#3B92A0"
                           BackgroundColor="#1B3B48"
                           Padding="15,5"
                           HasShadow="False"
                           CornerRadius="5">
                        <Grid ColumnDefinitions="Auto,*">
                            <Image Source="user.png"
                                   HeightRequest="20"
                                   WidthRequest="20"
                                   Margin="0,0,10,0"/>
                            <Entry Grid.Column="1"
                                   Text="{Binding ForgotPasswordEmail}"
                                   Placeholder="{Binding Email}"
                                   PlaceholderColor="#7A9AAD"
                                   TextColor="White"
                                   Keyboard="Email"
                                   BackgroundColor="Transparent"/>
                        </Grid>
                    </Frame>

                    <Button Text="{Binding SendResetLinkText}"
                            Command="{Binding ForgotPasswordCommand}"
                            BackgroundColor="#3B92A0"
                            TextColor="White"
                            CornerRadius="5"/>
                </VerticalStackLayout>
            </Frame>

            <!-- Activity Indicator -->
            <ActivityIndicator IsRunning="{Binding IsBusy}"
                             IsVisible="{Binding IsBusy}"
                             HorizontalOptions="Center"
                             Color="#3B92A0"/>
        </VerticalStackLayout>
    </ScrollView>
</ContentPage>