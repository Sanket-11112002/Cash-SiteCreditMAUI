                  BackgroundColor="Transparent">
                    <Image Aspect="AspectFit"
                      Source="{Binding SearchResultImage}"/>
                </Frame>-->

                <!-- Labels -->
                <!--<Label Grid.Row="1" 
                  Grid.Column="0"
                  Text="{Binding YourPicture}"
                  TextColor="White"
                  HorizontalOptions="Center"
                  Margin="0,10,0,0"/>

                <Label Grid.Row="1" 
                  Grid.Column="1"
                  Text="{Binding SearchResult}"
                  TextColor="White"
                  HorizontalOptions="Center"
                  Margin="0,10,0,0"/>-->

                <!-- Labels -->
                <Label Grid.Row="1" 
                       Grid.Column="0"
                       Text="{Binding YourPicture}"
                       TextColor="White"
                       HorizontalOptions="Center"
                       HorizontalTextAlignment="Center"
                       LineBreakMode="WordWrap"
                       MaxLines="2"/>

                <Label Grid.Row="1" 
                       Grid.Column="1"
                       Text="{Binding SearchResult}"
                       TextColor="White"
                       HorizontalOptions="Center"
                       HorizontalTextAlignment="Center"
                       LineBreakMode="WordWrap"
                       MaxLines="2"/>
            </Grid>

       

            <!-- Card Details -->
            <Frame Grid.Row="2"
                   BackgroundColor="#2A3644"
                   CornerRadius="15"
                   Padding="15"
                   Margin="0,10,0,0">
                <VerticalStackLayout Spacing="10">
                    <Label Text="{Binding CardName}"
                           TextColor="White"
                           FontSize="20"
                           HorizontalOptions="Center"
                           HorizontalTextAlignment="Center"
                           LineBreakMode="WordWrap"/>

                    <Label Text="{Binding CardRarity}"
                           TextColor="LightGray"
                           FontSize="16"
                           HorizontalOptions="Center"
                           HorizontalTextAlignment="Center"
                           LineBreakMode="WordWrap"/>

                    <Label Text="{Binding CardSet}"
                           TextColor="LightGray"
                           FontSize="16"
                           HorizontalOptions="Center"
                           HorizontalTextAlignment="Center"
                           LineBreakMode="WordWrap"/>

                    <Label Text="{Binding CardComfiredMsg}"
                           TextColor="White"
                           FontSize="18"
                           HorizontalOptions="Center"
                           HorizontalTextAlignment="Center"
                           LineBreakMode="WordWrap"
                           Margin="0,5,0,5"/>

                    <Grid ColumnDefinitions="*,*" 
                          ColumnSpacing="15"
                          Margin="0,5,0,0">
                        <Button Grid.Column="0"
                                Text="{Binding YesAddList}"
                                BackgroundColor="#2D9C2A"
                                TextColor="White"
                                CornerRadius="25"
                                HeightRequest="50"
                                MinimumHeightRequest="40"
                                Command="{Binding ConfirmCardCommand}"
                                LineBreakMode="WordWrap"
                                Padding="10,0"/>

                        <Button Grid.Column="1"
                                Text="{Binding NoTryAgain}"
                                BackgroundColor="#FF4444"
                                TextColor="White"
                                CornerRadius="25"
                                HeightRequest="50"
                                MinimumHeightRequest="40"
                                Clicked="Retry"
                                LineBreakMode="WordWrap"
                                Padding="10,0"/>
                    </Grid>
                </VerticalStackLayout>
            </Frame>
        </Grid>

    </ScrollView>

</ContentPage>